<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ff0365a8" />
            <padding android:top="2dp" android:bottom="2dp" />
            <gradient android:startColor="#702D384E" android:endColor="#70334261" android:angle="270.0" android:centerColor="#704168A3" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="#ff0365a8" />
            <padding android:top="2dp" android:bottom="2dp" />
            <gradient android:startColor="#70ffffff" android:endColor="#70dddddd" android:angle="270.0" android:centerColor="#70ffffff" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#ff0365a8" />
            <padding android:top="2dp" android:bottom="2dp" />
            <stroke android:width="1.0dip" android:color="#701F2227" />
            <gradient android:startColor="#70aaaaaa" android:endColor="#70888888" android:angle="270.0" android:centerColor="#70888888" />
        </shape>
    </item>
</selector>